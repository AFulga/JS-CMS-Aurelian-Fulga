<div class="posts-container">
    <% posts.forEach(post => { %>
    <article>
        <div class="post-wrap">
            <a href="/posts/<%= post.slug %>"><img src="<%= post.img %>" class="post-img" alt="randomImg"></a>
            <div class="post-inner-content posts-page">
                <h2 class="post-title"><a href="/posts/<%= post.slug %>"><%= post.title %></a></h2>
                <div class="entry-meta">
                    <span class="post-time">
                        <i class="fa fa-calendar-alt"></i>
                        <time><%= post.postDate %></time>
                    </span>
                    <span class="post-author">
                        <i class="fa fa-user"></i>
                        <span><%= post.author %></span>
                    </span>
                    <span class="post-comments">
                        <i class="fa fa-comments"></i>
                        <span><%= post.comments.length %> Comments</span>
                    </span>
                </div>
                <div class="post-body">
                    <%- post.content %>
                    <div class="read-more-container">
                        <a class="read-more" href="/posts/<%= post.slug %>" title="Read More">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <% }) %>
</div>